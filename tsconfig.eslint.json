{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "eslint.config.mjs", // (있다면)
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "packages/*/vite.config.ts", // 패키지별 vite 설정도 검사하려면
    "packages/*/vitest.config.ts",
    "packages/*/__test__/**/*.ts",
    "packages/*/__test__/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
